# ==================================================
# CLOUD DEPLOYMENT CONFIGURATION
# For: Render (App) + Aiven (MySQL) + Cloudinary (Storage)
# ==================================================

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=http://quranseed.com.ng

# ==================================================
# DATABASE CONFIGURATION (Aiven MySQL with SSL)
# ==================================================
DB_HOST=quranseed.com.ng
DB_PORT=3306
DB_USER=baladre1_tailor
DB_PASS=Himmacolage343#
DB_NAME=baladre1_tailor
DB_USE_SSL=false

# Note: Download ca.pem from Aiven dashboard
# Place it in project root: ca.pem

# ==================================================
# CLOUDINARY CONFIGURATION (Image Storage)
# ==================================================
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_UPLOAD_PRESET=your-unsigned-preset

# Optional (for signed uploads and deletions):
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# ==================================================
# SESSION CONFIGURATION
# ==================================================
# Options: 'file' or 'database'
# - file: Simple but clears on Render restart (OK for demos)
# - database: Persistent across restarts (recommended for production)
SESSION_STORAGE=file
SESSION_LIFETIME=7200
SESSION_SECURE=true
SESSION_HTTPONLY=true

# ==================================================
# SMTP/EMAIL CONFIGURATION
# ==================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME="Smart Tailoring Service"

